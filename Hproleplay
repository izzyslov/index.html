<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto S.O.S - Hospital Homeland RP</title>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-950 text-slate-200">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        const App = () => {
            const [pacientes, setPacientes] = useState(() => {
                const dadosLocais = localStorage.getItem('projeto_sos_homeland_v3');
                return dadosLocais ? JSON.parse(dadosLocais) : [];
            });

            const [nome, setNome] = useState('');
            const [idade, setIdade] = useState('');
            const [foto, setFoto] = useState('');
            const [assinatura, setAssinatura] = useState('');
            const [relatorio, setRelatorio] = useState('');
            const [prioridade, setPrioridade] = useState('verde');
            const [editandoId, setEditandoId] = useState(null);

            useEffect(() => {
                localStorage.setItem('projeto_sos_homeland_v3', JSON.stringify(pacientes));
            }, [pacientes]);

            useEffect(() => {
                const interval = setInterval(() => {
                    const agora = Date.now();
                    setPacientes(prev => prev.filter(p => !p.removerEm || p.removerEm > agora));
                }, 60000);
                return () => clearInterval(interval);
            }, []);

            const handleFoto = (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onloadend = () => setFoto(reader.result);
                    reader.readAsDataURL(file);
                }
            };

            const adicionarPaciente = (e) => {
                e.preventDefault();
                const novo = {
                    id: Date.now(),
                    nome, idade, relatorio, prioridade, assinatura,
                    foto: foto || 'https://via.placeholder.com/150?text=CIDADAO',
                    horaEntrada: new Date().toLocaleTimeString('pt-BR'),
                    removerEm: null
                };
                setPacientes([novo, ...pacientes]);
                limparCampos();
            };

            const limparCampos = () => {
                setNome(''); setIdade(''); setRelatorio(''); setFoto(''); setAssinatura(''); setPrioridade('verde');
            };

            const salvarEdicao = () => {
                setPacientes(pacientes.map(p => p.id === editandoId ? { ...p, relatorio } : p));
                setEditandoId(null);
                setRelatorio('');
            };

            const darAlta = (id) => {
                const umaHora = 3600000; 
                setPacientes(pacientes.map(p => 
                    p.id === id ? { ...p, removerEm: Date.now() + umaHora } : p
                ));
            };

            const estilos = {
                vermelho: 'border-l-8 border-red-600 shadow-[0_0_20px_rgba(220,38,38,0.15)] bg-red-950/10',
                azul: 'border-l-8 border-blue-500 shadow-[0_0_20px_rgba(59,130,246,0.15)] bg-blue-950/10',
                verde: 'border-l-8 border-emerald-500 shadow-[0_0_20px_rgba(16,185,129,0.15)] bg-emerald-950/10'
            };

            return (
                <div className="min-h-screen p-4 md:p-8 font-sans bg-slate-950">
                    
                    {/* HEADER COM NOME DO PROJETO */}
                    <header className="max-w-6xl mx-auto mb-10 flex flex-col md:flex-row justify-between items-center bg-slate-900/80 border border-slate-800 p-6 rounded-3xl shadow-2xl relative overflow-hidden">
                        <div className="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-red-600 via-white to-red-600 opacity-50"></div>
                        
                        <div className="flex items-center gap-6">
                            <div className="flex flex-col items-center">
                                <span className="text-red-600 font-black text-4xl leading-none animate-pulse">‚úö</span>
                                <span className="text-[10px] font-black text-white bg-red-600 px-1 mt-1 rounded">S.O.S</span>
                            </div>
                            <div className="h-14 w-[1px] bg-slate-700 hidden md:block"></div>
                            <div>
                                <h1 className="text-3xl font-black text-white tracking-tighter">
                                    PROJETO <span className="text-red-600 italic">S.O.S</span>
                                </h1>
                                <p className="text-xs font-bold text-slate-400 uppercase tracking-[0.3em]">Hospital Homeland Roleplay</p>
                            </div>
                        </div>

                        <div className="mt-6 md:mt-0 flex flex-col items-center md:items-end">
                            <button onClick={() => window.location.reload()} className="text-[10px] font-black text-slate-500 hover:text-white transition-colors border border-slate-800 px-4 py-2 rounded-full uppercase tracking-widest mb-2">
                                Terminar Sess√£o
                            </button>
                            <div className="text-emerald-500 font-mono text-[10px] flex items-center gap-2">
                                <span className="w-1.5 h-1.5 bg-emerald-500 rounded-full animate-ping"></span> SISTEMA_OPERACIONAL_ATIVO
                            </div>
                        </div>
                    </header>

                    <main className="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
                        
                        {/* FORMUL√ÅRIO PROJETO S.O.S */}
                        <section className="lg:col-span-1">
                            <form onSubmit={adicionarPaciente} className="bg-slate-900 border border-slate-800 p-6 rounded-[2.5rem] space-y-5 shadow-2xl sticky top-8">
                                <div className="flex items-center gap-2 text-white border-b border-slate-800 pb-4">
                                    <div className="w-2 h-2 bg-red-600 rounded-full"></div>
                                    <h2 className="font-black uppercase text-xs tracking-widest">Triagem de Emerg√™ncia</h2>
                                </div>
                                
                                <div className="space-y-4">
                                    {/* Campo Foto */}
                                    <div className="relative group overflow-hidden rounded-2xl border-2 border-slate-800 bg-slate-950 h-40 flex items-center justify-center transition-all hover:border-red-600/50">
                                        {foto ? (
                                            <img src={foto} className="w-full h-full object-cover" />
                                        ) : (
                                            <div className="text-center p-4">
                                                <p className="text-[10px] font-black text-slate-600 uppercase mb-2">Capturar Face do Cidad√£o</p>
                                                <span className="text-2xl opacity-20">üì∑</span>
                                            </div>
                                        )}
                                        <input type="file" accept="image/*" onChange={handleFoto} className="absolute inset-0 opacity-0 cursor-pointer" />
                                    </div>

                                    <input type="text" value={nome} onChange={e => setNome(e.target.value)} placeholder="Nome do Cidad√£o" className="w-full px-5 py-4 bg-slate-950 border border-slate-800 rounded-2xl focus:border-red-600 outline-none text-white font-bold uppercase text-sm transition-all" required />
                                    
                                    <div className="grid grid-cols-2 gap-3">
                                        <input type="number" value={idade} onChange={e => setIdade(e.target.value)} placeholder="Idade" className="px-5 py-4 bg-slate-950 border border-slate-800 rounded-2xl text-white font-bold outline-none focus:border-red-600" required />
                                        <select value={prioridade} onChange={e => setPrioridade(e.target.value)} className="px-2 py-4 bg-slate-950 border border-slate-800 rounded-2xl font-black text-[10px] uppercase text-white cursor-pointer outline-none focus:border-red-600">
                                            <option value="verde" className="bg-slate-900">üü¢ Est√°vel</option>
                                            <option value="azul" className="bg-slate-900">üîµ Observa√ß√£o</option>
                                            <option value="vermelho" className="bg-slate-900">üî¥ Emerg√™ncia</option>
                                        </select>
                                    </div>

                                    <textarea value={relatorio} onChange={e => setRelatorio(e.target.value)} placeholder="Descreva os ferimentos ou sintomas..." className="w-full px-5 py-4 bg-slate-950 border border-slate-800 rounded-2xl h-32 resize-none text-slate-300 text-sm italic outline-none focus:border-red-600" required></textarea>
                                    
                                    <div className="bg-slate-950 p-4 rounded-2xl border border-slate-800 border-dashed">
                                        <label className="text-[9px] font-black text-slate-500 uppercase mb-2 block tracking-[0.2em]">Assinatura M√©dica [ S.O.S ]</label>
                                        <input type="text" value={assinatura} onChange={e => setAssinatura(e.target.value)} placeholder="Dr. Nome" className="w-full bg-transparent border-b border-slate-800 py-1 italic text-red-500 focus:border-red-600 outline-none font-serif text-lg" required />
                                    </div>
                                </div>

                                <button type="submit" className="w-full bg-red-600 hover:bg-red-700 text-white py-5 rounded-2xl font-black transition-all shadow-xl shadow-red-900/20 uppercase tracking-widest text-xs">
                                    Enviar para Monitoramento
                                </button>
                            </form>
                        </section>

                        {/* PAINEL DE MONITORAMENTO S.O.S */}
                        <section className="lg:col-span-2 space-y-6">
                            <div className="flex justify-between items-center bg-slate-900/40 p-4 rounded-2xl border border-slate-800">
                                <h2 className="text-sm font-black text-white tracking-widest uppercase flex items-center gap-3">
                                    <span className="flex h-2 w-2 relative">
                                        <span className="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                        <span className="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
                                    </span>
                                    Painel de Monitoramento S.O.S
                                </h2>
                                <span className="text-[10px] font-mono text-slate-500 tracking-tighter">TOTAL_ATIVOS: {pacientes.length}</span>
                            </div>

                            <div className="space-y-5">
                                {pacientes.map(p => (
                                    <div key={p.id} className={`bg-slate-900/60 p-6 rounded-[2rem] border border-slate-800 transition-all relative overflow-hidden ${p.removerEm ? 'opacity-30 blur-[1px]' : estilos[p.prioridade]}`}>
                                        
                                        <div className="flex flex-col md:flex-row gap-6">
                                            {/* Imagem do Paciente */}
                                            <div className="relative shrink-0 flex justify-center">
                                                <img src={p.foto} className="w-28 h-28 md:w-36 md:h-36 rounded-3xl object-cover border-2 border-slate-800 shadow-2xl" />
                                                <div className="absolute top-2 right-2 bg-red-600 text-[8px] font-black px-1.5 py-0.5 rounded text-white italic shadow-lg">S.O.S</div>
                                            </div>

                                            {/* Conte√∫do */}
                                            <div className="flex-1">
                                                <div className="flex justify-between items-start mb-4">
                                                    <div>
                                                        <h3 className="text-2xl font-black text-white uppercase tracking-tighter leading-none">{p.nome}</h3>
                                                        <div className="flex gap-4 text-[10px] font-bold text-slate-500 uppercase mt-2">
                                                            <span>Idade: {p.idade}</span>
                                                            <span className="text-slate-800">|</span>
                                                            <span>Chegada: {p.horaEntrada}</span>
                                                        </div>
                                                    </div>
                                                    <div className={`text-[10px] px-4 py-2 rounded-xl font-black uppercase border ${p.removerEm ? 'bg-slate-800 text-slate-500' : 'bg-slate-950 text-white border-slate-800'}`}>
                                                        {p.removerEm ? 'ALTA_PROCESSADA' : `PRIORIDADE_${p.prioridade}`}
                                                    </div>
                                                </div>

                                                {editandoId === p.id ? (
                                                    <div className="mt-3 space-y-2">
                                                        <textarea value={relatorio} onChange={e => setRelatorio(e.target.value)} className="w-full bg-slate-950 border border-red-600/50 p-4 text-sm rounded-2xl h-24 text-slate-300 outline-none" />
                                                        <button onClick={salvarEdicao} className="bg-red-600 text-white px-6 py-2 rounded-xl text-[10px] font-black uppercase">Gravar Altera√ß√£o</button>
                                                    </div>
                                                ) : (
                                                    <div className="mt-4 bg-slate-950/50 p-5 rounded-2xl border border-slate-800 text-sm text-slate-400 relative group">
                                                        <p className="italic leading-relaxed font-medium">"{p.relatorio}"</p>
                                                        {!p.removerEm && (
                                                            <button onClick={() => { setEditandoId(p.id); setRelatorio(p.relatorio); }} className="absolute top-2 right-2 opacity-0 group-hover:opacity-100 bg-slate-800 hover:text-red-500 p-2 rounded-lg text-[10px] font-black transition-all">EDITAR</button>
                                                        )}
                                                    </div>
                                                )}

                                                <div className="mt-6 flex justify-between items-center border-t border-slate-800 pt-4">
                                                    <div className="flex flex-col">
                                                        <span className="text-[8px] font-black text-slate-600 uppercase mb-1 tracking-widest text-left">M√©dico Respons√°vel:</span>
                                                        <span className="font-serif italic text-red-500 text-lg leading-none">{p.assinatura}</span>
                                                    </div>
                                                    {!p.removerEm && (
                                                        <button onClick={() => darAlta(p.id)} className="bg-slate-950 hover:bg-red-600 text-slate-500 hover:text-white px-5 py-3 rounded-2xl border border-slate-800 transition-all font-black text-[10px] uppercase shadow-lg shadow-black/40">
                                                            Processar Alta
                                                        </button>
                                                    )}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                                {pacientes.length === 0 && (
                                    <div className="text-center py-32 bg-slate-900/20 rounded-[3rem] border-2 border-dashed border-slate-900 flex flex-col items-center">
                                        <div className="w-20 h-20 bg-slate-900 rounded-full flex items-center justify-center text-4xl mb-4 grayscale opacity-30 italic">S.O.S</div>
                                        <h3 className="font-black text-slate-800 uppercase tracking-[0.5em] text-sm">Sem Emerg√™ncias Ativas</h3>
                                    </div>
                                )}
                            </div>
                        </section>
                    </main>

                    <footer className="max-w-6xl mx-auto mt-16 text-center pb-12">
                        <div className="inline-block px-6 py-2 bg-slate-900 border border-slate-800 rounded-full">
                            <span className="text-[9px] text-slate-500 font-black uppercase tracking-[0.3em]">
                                Hospital Homeland RP - Sistema Desenvolvido para o <span className="text-red-600">Projeto S.O.S</span>
                            </span>
                        </div>
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
